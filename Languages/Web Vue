/*************************************************************************************************************
â€¢ Vue.js is a Javascript framework for UI built on top of HTML, CSS, and JavaScript
**************************************************************************************************************/

<!DOCTYPE html>
<head>
  <script src="https://unpkg.com/vue@3"></script>
</head>
<body>
  <div id="content" class="container">
    // ------------------------------------------------------------------------------
    // TEMPLATE
    <h1>{{ myStr }}</h1>
    <p>{{ myArr[0] }}</p> 
    <p v-for="arr in myArr">{{ arr }}</p> // For loop over array, creates multiple <p> elements
    <a 
      v-bind:href="{{ myStr }}", // Use in attribute, 'v-bind' optional
      :title="`This is some text ${myStr}`" // Use in attribute string, requires `
    >{{ myStr }}</a>
    // ------------------------------------------------------------------------------
  </div>
  <script>
    Vue.createApp({
      data() {
        // --------------------------------------------------------------------------
        // APP STATE
        return {
          myStr: "My String",
          myArr: ['One', 'Two'],
          myObjArr: [{ text: 'One', url: 'test.html' }]
        };
        // --------------------------------------------------------------------------
      }
    }).mount('#content') // Mount in div element with id 'content'
  </script>
</body>
</html>

