global proc int progWindow(int $i, int $max){
	
	int $interrupt = 0;
	
	if ($i == 1){
		progressWindow
			-title "Progress"
			-max $max
			-isInterruptable true;
    }
	
	else {
		progressWindow -edit -step 1;
    }
	
	if ($i == ($max-1)){
		progressWindow -ep;
    }
	
	if (`progressWindow -q -isCancelled`){
		$interrupt = 1;
		progressWindow -ep;
    }
	
	return $interrupt;
}